<!DOCTYPE html>
<html lang="en">

<%- include('../../public/template/head.ejs') %>

<body class="dark:bg-gray-900">
    <%- include('../../public/template/navbar.ejs') %>


    <%
    let category_name = ''
    let description = ''

    if(data !== undefined) {
        category_name = data.category_name_032
        description = data.description_032
    }
    %>

    <!-- Flash message -->
    <% if (locals.success) { %>
          <%- locals.success %>
      <% } %>
      <% if (locals.failed) { %>
          <%- locals.failed %>
      <% } %>
    <form action="" method="post" class="max-w-md mx-auto mt-10">
        <div class="relative z-0 w-full mb-5 group">
            <input type="text" name="category_name_032" id="floating_name" class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " value="<%= category_name %>" required />
            <label for="floating_name" class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Category Name</label>
        </div>

        <div class="relative z-0 w-full mb-5 group">
            <textarea id="message" rows="4" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Customer Address" name="description_032"><%= description %></textarea>
        </div>

        <button type="submit" class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" name="submit">Save</button>

        <a href="/categories">
            <button type="button" class="text-white bg-gradient-to-r from-yellow-500 via-yellow-600 to-yellow-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-yellow-300 dark:focus:ring-yellow-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" name="submit">Cancel</button>
        </a>
    </form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
    <script src="/template/darkmode/switchMode.js"></script>
</body>

</html>