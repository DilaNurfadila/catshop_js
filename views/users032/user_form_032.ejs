<!DOCTYPE html>
<html lang="en">

<%- include('../../public/template/head.ejs') -%>

<body>
    <h1>CATSHOP 032</h1>
    <h3>USER FORM</h3>
    <hr>
    <%
    let username = ''
    let usertype = ''
    let fullname = ''

    if(data !== undefined) {
        username = data.username_032
        usertype = data.usertype_032
        fullname = data.fullname_032
    }
    %>

    <!-- Flash message -->
    <% if (locals.success) { %>
        <p style="color:green;">
          <%= locals.success %>
        </p>
      <% } %>
      <% if (locals.failed) { %>
        <p style="color: red;">
          <%= locals.failed %>
        </p>
      <% } %>
    <form action="" method="post">
        <table>
            <tr>
                <td>Username</td>
                <td><input type="text" name="username_032" value="<%= username %>" required></td>
            </tr>
            <tr>
                <td>Usertype</td>
                <td>
                    <input type="radio" name="usertype_032" value="Manager" <%= usertype == 'Manager' ? 'checked' : '' %> required> Manager
                    <input type="radio" name="usertype_032" value="Cashier" <%= usertype == 'Cashier' ? 'checked' : '' %> required> Cashier
                </td>
            </tr>
            <tr>
                <td>Fullname</td>
                <td><input type="text" name="fullname_032" value="<%= fullname %>" required></td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="SAVE" name="submit">
                    <a href="/users"><input type="button" value="CANCEL"></a>
                </td>
            </tr>
        </table>
    </form>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
</body>

</html>